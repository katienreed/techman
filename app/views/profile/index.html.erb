<main id="profilepage">
  <div class="container">
    <nav>
      <ul>
        <li>Techman</li>
      </ul>
    </nav>
    <div class="content">
      <div class="leftwrapper">
        <h3>
          Welcome, <%= @current_user.username %>
          <br><br>
            <%= image_tag @current_user.avatar.url(:medium), :class => "avatar" %>
          <br><br>
          Your score: <%= @score %>
        </h3>
        <button onclick="location.href='/game'" class="btn" >Play Now</button>
      </div>
      <div class="rightwrapper">
        <h4>Scoreboard</h4>
        <div class="scoreboard">
          <% @users.each do |user|%>
            <%= "#{ user.username } #{ user.wins }" %> <%= image_tag user.avatar.url(:thumb), :class =>"miniavatar" %> <br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
